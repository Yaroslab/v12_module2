<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="sale_document_type_view_form" model="ir.ui.view">
            <field name="name">sale.document.type.form</field>
            <field name="model">sale.document.type</field>
            <field name="arch" type="xml">
                <form string="Tipo Comprobante de Pago">
                    <sheet>
                        <group>
                            <field name="code"/>
                            <field name="name"/>
                        </group>
                        <group col="6">
                            <div class="oe_inline">
                                <field name="is_active" nolabel="1"/>
                                <label string="Activo" for="is_active"/>
                            </div>
                            <div class="oe_inline">
                                <field name="is_sale" nolabel="1"/>
                                <label string="Ventas" for="is_sale"/>
                            </div>
                            <div class="oe_inline">
                                <field name="is_purchase" nolabel="1"/>
                                <label string="Compras" for="is_purchase"/>
                            </div>
                        </group>
                        <group attrs="{'invisible': [('is_purchase', '=', False)]}">
                            <group string="Serie">
                                <field name="prefix_length_validation"/>
                                <field name="prefix_long" attrs="{'invisible': [('prefix_length_validation', 'in', [False, 'no_validation'])]}"/>
                                <field name="prefix_validation"/>
                            </group>
                            <group string="Correlativo">
                                <field name="correlative_length_validation"/>
                                <field name="correlative_long" attrs="{'invisible': [('correlative_length_validation', 'in', [False, 'no_validation'])]}"/>
                                <field name="correlative_validation"/>
                            </group>
                        </group>
                        <group attrs="{'invisible': [('is_purchase', '=', False)]}">
                            <field name="journal_purchase_id"/>
                            <field name="company_id"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="account_journal_form_inherit_sale_document_type" model="ir.ui.view">
            <field name="name">account.journal.form.inherit.sale.document.type</field>
            <field name="model">account.journal</field>
            <field name="inherit_id" ref="account.view_account_journal_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='type']" position='after'>
                    <field name="sale_document_type_id" attrs="{'invisible': [('type', '!=', 'sale')]}"/>
                </xpath>
            </field>
        </record>

        <record id="account_invoice_purchase_form_inherit_sale_document_type" model="ir.ui.view">
            <field name="name">account.invoice.form.purchase.inherit.sale.document.type</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_supplier_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position='after'>
                    <field name="type_document_id" domain="[('is_active','=',True),('is_purchase','=', True)]" attrs="{'readonly': [('state', 'not in', 'draft')]}" required="1"/>
                </xpath>
                <xpath expr="//notebook" position='before'>
                    <field name="error_dialog" class="infobox" attrs="{'invisible': [('error_dialog','in', [False,''])]}"/>
                </xpath>
                <xpath expr="//sheet/group/group/field[@name='reference']" position='replace'>
                    <div cols="3" colspan="3" attrs="{'invisible': ['|',('state','!=', 'draft'),('type','not in',['in_invoice','in_refund'])]}">
                        <span class="o_form_label" style="font-weight: bold">Referencia de proveedor </span>
                        <span attrs="{'invisible': [('state','!=', 'draft')]}">
                            <field name="prefix_val" style="width: 30%;" attrs="{'required': [('state','=', 'draft'),('type','in',['in_invoice','in_refund'])]}" placeholder="Serie"/> -
                            <field name="suffix_val" style="width: 30%;" attrs="{'required': [('state','=', 'draft'),('type','in',['in_invoice','in_refund'])]}" placeholder="Correlativo"/>
                        </span>
                    </div>

                    <field name="reference" attrs="{'invisible': [('state','=', 'draft'),('type','in',['in_invoice','in_refund'])]}" string="Referencia de proveedor"/>

                </xpath>
            </field>
        </record>

        <record id="res_partner_form_inherit_sale_document_type" model="ir.ui.view">
            <field name="name">res.partner.form.inherit.sale.document.type</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='sales_purchases']//field[@name='supplier']" position="after">
                    <field name="type_document_id" attrs="{'invisible': [('supplier','=', False)]}"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>